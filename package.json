{
  "name": "@thedadi/as-integration-koa",
  "description": "Apollo server integration for koa framework",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheDadi/as-integration-koa"
  },
  "keywords": [
    "GraphQL",
    "Apollo",
    "Server",
    "Koa",
    "Javascript"
  ],
  "scripts": {
    "release": "pnpm build && pnpm changeset publish",
    "build": "pnpm clean && pnpm lint && pnpm test && tshy && tshy-after && attw --pack",
    "fix": "biome check --fix",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit && biome check && pnpm knip",
    "test": "jest",
    "knip": "knip"
  },
  "dependencies": {
    "@koa/bodyparser": "6.0.0"
  },
  "devDependencies": {
    "@apollo/server": "5.1.0",
    "@apollo/server-integration-testsuite": "5.1.0",
    "@arethetypeswrong/cli": "0.18.2",
    "@biomejs/biome": "2.3.6",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@jest/globals": "30.2.0",
    "@jest/types": "30.2.0",
    "@koa/cors": "5.0.0",
    "@swc/core": "^1.15.2",
    "@tsconfig/node22": "22.0.5",
    "@types/jest": "29.5.14",
    "@types/koa": "3.0.1",
    "@types/koa__cors": "5.0.1",
    "@types/node": "24.10.1",
    "graphql": "16.12.0",
    "jest": "29.7.0",
    "jest-config": "29.7.0",
    "knip": "5.70.1",
    "koa": "3.1.1",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tshy": "3.1.0",
    "tshy-after": "1.4.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.22.0",
  "peerDependencies": {
    "@apollo/server": "^5.0.0",
    "koa": "^3.0.0"
  },
  "tshy": {
    "exclude": [
      "src/__tests__/*.ts"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@apollo/protobufjs",
      "@biomejs/biome",
      "@swc/core",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "files": [
    "dist"
  ]
}
